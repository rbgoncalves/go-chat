# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type ChatMessage {
  id: ID!
  from: String!
  text: String!
}

type Query {
  messages: [ChatMessage]!
}

input NewMessage {
  from: String!
  text: String!
}

type Mutation {
  sendMessage(input: NewMessage!): ID!
}

type Subscription {
  onNewMessage: ChatMessage
}
